{
    "compilerOptions": {
        "target": "es2017",
        "module": "commonjs",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,

        "noImplicitAny": true,
        "skipLibCheck": true,
        "strictNullChecks": true,
        "outDir": "./dist"
    },
    "include": ["**/*.ts"]
}
